CONFIG_X86_GENERIC=y

# power management
CONFIG_ACPI=n
#CONFIG_CPU_IDLE=y
#CONFIG_INTEL_IDLE=y

# buses
## ISA (old systems)
CONFIG_ISA=y
CONFIG_EISA=y
CONFIG_ISAPNP=y
## PCI
CONFIG_PCI=y

# input devices
## keyboard
CONFIG_KEYBOARD_ATKBD=y
## mouse
CONFIG_MOUSE_PS2=y
CONFIG_MOUSE_PS2_SYNAPTICS=y
CONFIG_MOUSE_SERIAL=y

# serial
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
