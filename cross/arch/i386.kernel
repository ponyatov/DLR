# use low memory systems
CONFIG_NOHIGHMEM=y
CONFIG_X86_GENERIC=y
# serial
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
# IDE/SATA
CONFIG_ATA=y
## legacy IDE with DMA
CONFIG_ATA_SFF=y
CONFIG_ATA_BMDMA=y
## AHCI
CONFIG_SATA_AHCI_PLATFORM=y

# RTC
CONFIG_RTC_DRV_CMOS=y

# input devices
## keyboard
CONFIG_KEYBOARD_ATKBD=y
## mouse
CONFIG_MOUSE_PS2=y
CONFIG_MOUSE_PS2_SYNAPTICS=y
CONFIG_MOUSE_SERIAL=y

# framebuffer
CONFIG_FB_VGA16=y
CONFIG_FB_VESA=y
CONFIG_VGA_CONSOLE=y
